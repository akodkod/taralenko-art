---
import "../styles/global.css"
import { Font } from "astro:assets";
---

<html
  lang="en"
  class="bg-background antialiased text-foreground"
>
  <head>
    <meta charset="utf-8" />

    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />

    <link
      rel="icon"
      href="/favicon.ico"
    />

    <meta
      name="viewport"
      content="width=device-width"
    />

    <title>Taralenko Art | Anastasiia Taralenko</title>

    <meta
      name="description"
      content="Anastasiia Taralenko is a painter who creates paintings of people’s souls"
    />

    <meta
      property="og:title"
      content="Taralenko Art"
    />

    <meta
      property="og:description"
      content="Anastasiia Taralenko is a painter who creates paintings of people’s souls"
    />

    <meta
      property="og:image"
      content="/og-image.jpg"
    />

    <Font
      preload
      cssVariable="--font-eb-garamond"
    />
    <Font
      preload
      cssVariable="--font-inter"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
